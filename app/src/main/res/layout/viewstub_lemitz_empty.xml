<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:text="还没有相关的订单喔~"
            android:textColor="@color/color_gray_secondary"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="25dp"
            android:gravity="center_horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <cn.com.cimgroup.view.FlowLayout
                        android:id="@+id/id_flowlayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        app:debugDraw="false"
                        app:horizontalSpacing="5dp"
                        app:orientation="horizontal"
                        app:verticalSpacing="5dp" >
                    </cn.com.cimgroup.view.FlowLayout>

                    <TextView
                        android:id="@+id/id_exchange_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:drawableLeft="@drawable/icon_hall_fresh"
                        android:drawablePadding="2dp"
                        android:gravity="center_vertical"
                        android:text="@string/hall_dlt_refresh"
                        android:textColor="@color/color_gray_indicator"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@color/hall_grey_word"
                    android:orientation="horizontal"
                    android:padding="0.5dp" >

                    <LinearLayout
                        android:id="@+id/id_choose_bs_layout"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/white"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/id_tz_bs_show"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10倍"
                            android:textColor="@color/color_gray_secondary"
                            android:textSize="12sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:src="@drawable/icon_hall_pull" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/id_pay_lemi_num"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="0.5dp"
                        android:layout_weight="1"
                        android:textColor="@color/color_gray_secondary"
                        android:background="@color/color_white"
                        android:gravity="center"
                        android:text="共计：40乐米"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/id_dlt_tz"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/bg_hall_linear_p_new"
                android:gravity="center"
                android:text="@string/betting"
                android:textColor="@color/color_red" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/id_bs_choose_layout"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/id_dlt_bei_10"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/layout_bg_color"
                android:gravity="center"
                android:tag="10"
                android:text="10倍"
                android:textColor="@color/color_white" />

            <TextView
                android:id="@+id/id_dlt_bei_20"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="0.5dp"
                android:layout_weight="1"
                android:background="@color/layout_bg_color"
                android:gravity="center"
                android:tag="20"
                android:text="20倍"
                android:textColor="@color/color_white" />

            <TextView
                android:id="@+id/id_dlt_bei_50"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="0.5dp"
                android:layout_marginRight="80dp"
                android:layout_weight="1"
                android:background="@color/layout_bg_color"
                android:gravity="center"
                android:tag="50"
                android:text="50倍"
                android:textColor="@color/color_white" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:layout_marginTop="220dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="来注大乐透，碰碰运气吧~"
        android:textColor="@color/color_gray_indicator" />

</FrameLayout>