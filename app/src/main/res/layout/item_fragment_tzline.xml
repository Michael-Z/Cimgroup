<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:paddingTop="6dp" >

    <TextView
        android:id="@+id/textView_line_top"
        style="@style/style_gray_vertical_line"
        android:layout_width="2dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView_line_item_all"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/textView_line_top"
        android:gravity="center_horizontal"
        android:textColor="@color/color_gray_secondary"
        android:layout_centerHorizontal="true"
        android:textSize="8sp" />

    <TextView
        android:id="@+id/textView_line_down"
        style="@style/style_gray_vertical_line"
        android:layout_width="2dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_line_item_all"
        android:layout_centerHorizontal="true" />

</RelativeLayout>