<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/layout_bg_color"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="95dp"
        android:background="@color/color_white"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="82dp"
            android:layout_height="85dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" >

            <ImageView
                android:id="@+id/id_item_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/lemi_convert_ticket" />

            <TextView
                android:id="@+id/id_item_image_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="23dp"
                android:text="京东"
                android:textColor="@color/color_white"
                android:textSize="6sp" />

            <TextView
                android:id="@+id/id_item_image_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="22dp"
                android:layout_marginRight="10dp"
                android:text="5元"
                android:textColor="@color/color_white"
                android:textSize="6sp" />

            <TextView
                android:id="@+id/id_item_image_huafei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:text="10元"
                android:textColor="@color/color_white"
                android:textSize="6sp" />
        </RelativeLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="95dp"
        android:layout_marginLeft="0.5dp"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@color/color_white"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="10dp" >

                <TextView
                    android:id="@+id/id_item_type"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="兑换红包"
                    android:textColor="@color/color_gray_secondary" />

                <TextView
                    android:id="@+id/id_item_state"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:text="正在充值"
                    android:textColor="@color/color_gray_indicator"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="0.5dp"
                android:layout_weight="1"
                android:background="@color/color_white"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="5dp"
                android:paddingRight="10dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/id_item_money_card"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="金额：5元"
                        android:textColor="@color/color_gray_secondary" />

                    <TextView
                        android:id="@+id/id_item_invalid_time_card"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical|right"
                        android:text="失效时间："
                        android:textColor="@color/color_gray_secondary" />
                </LinearLayout>

                <TextView
                    android:id="@+id/id_item_remark"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:gravity="center_vertical"
                    android:text="充值号码：13801598477"
                    android:textColor="@color/color_gray_secondary" />
            </LinearLayout>
        </LinearLayout>
        <ImageView 
            android:id="@+id/id_convert_card_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            android:background="@drawable/e_ui_tz_state_win"
            />
    </FrameLayout>

</LinearLayout>