<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
	<Button android:id="@+id/sqlite"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textColor="@color/color_gray_secondary"
	    android:text="sqlite"/>
	
	<Button android:id="@+id/webview"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textColor="@color/color_gray_secondary"
	    android:text="webview"/>
	
	<Button android:id="@+id/service_activity"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textColor="@color/color_gray_secondary"
	    android:text="service_activity"/>
	
	<Button android:id="@+id/aidl"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textColor="@color/color_gray_secondary"
	    android:text="aidl"/>
	
	
	<Button android:id="@+id/insertOne"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textColor="@color/color_gray_secondary"
	    android:text="insertOne"/>
	
	<Button android:id="@+id/insertAll"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textColor="@color/color_gray_secondary"
	    android:text="insertAll"/>
	
	<Button android:id="@+id/remove"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textColor="@color/color_gray_secondary"
	    android:text="remove"/>
	
	
	
	<android.support.v7.widget.RecyclerView
	    android:id="@+id/id_recyclerview"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:divider="#f9b68b"
        android:dividerHeight="10dp"
	    />
	
</LinearLayout>
