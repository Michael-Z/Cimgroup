<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_explain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_rank_location"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:text=""
            android:textColor="@color/color_gray_secondary"
            android:textSize="12sp" />

<!--         <TextView -->
<!--             android:id="@+id/tv_rank_gap" -->
<!--             android:layout_width="match_parent" -->
<!--             android:layout_height="20dp" -->
<!--             android:gravity="center" -->
<!--             android:text="距离获奖仅差1500米，继续努力哦" -->
<!--             android:textColor="@android:color/black" -->
<!--             android:textSize="12sp" /> -->
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/ll_rank_list_head"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/shape_round_gray_gray_border"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="0.5dp"
                android:layout_marginLeft="0.5dp"
                android:layout_marginTop="0.5dp"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:gravity="center"
                android:text="排行"
                android:textColor="@color/color_gray_secondary"
                android:textSize="14sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="0.5dp"
                android:layout_marginLeft="0.5dp"
                android:layout_marginTop="0.5dp"
                android:layout_weight="1.5"
                android:background="@android:color/white"
                android:gravity="center"
                android:text="用户"
                android:textColor="@color/color_gray_secondary"
                android:textSize="14sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="0.5dp"
                android:layout_marginLeft="0.5dp"
                android:layout_marginRight="0.5dp"
                android:layout_marginTop="0.5dp"
                android:layout_weight="1.5"
                android:background="@android:color/white"
                android:gravity="center"
                android:text="盈利乐米"
                android:textColor="@color/color_gray_secondary"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_round_gray_gray_border"
            android:visibility="visible"
            >

            <ListView
                android:id="@+id/lv_rank_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0.5dp"
                android:background="@drawable/shape_round_gray_gray_border"
                android:divider="@color/border_color"
                android:dividerHeight="0.5dp" >
            </ListView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_rank_bottom"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="#ddd"
        android:gravity="center"
        android:orientation="horizontal" 
        android:visibility="gone"
        >

        <TextView
            android:id="@+id/tv_my_rank_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="100"
            android:textColor="#ff669900"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_my_rank_middle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text="DREAMLEE"
            android:textColor="#ff669900"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_my_rank_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text="+1000000000000"
            android:textColor="#ffff4444"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>