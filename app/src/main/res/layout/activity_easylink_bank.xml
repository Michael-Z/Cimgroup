<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hall_background"
    android:orientation="vertical" >

    <include layout="@layout/include_title0" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/selector_bg_feature_item"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textView_easylink_money_text"
                        style="@style/lotteryhall_text_gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp"
                        android:text="@string/easylink_recharge_money" />

                    <EditText
                        android:id="@+id/textView_easylink_money"
                        style="@style/lotteryhall_text_gray"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:maxLength="7"
                        android:layout_toRightOf="@+id/textView_easylink_money_text"
                        android:background="@color/color_white"
                        android:digits="1234567890"
                        android:gravity="center_vertical"
                        android:hint="最少充值10元"
                        android:inputType="number" />
                </RelativeLayout>

                <View
                    style="@style/style_gray_horizontal_line"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textView_easylink_realname_text"
                        style="@style/lotteryhall_text_gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp"
                        android:text="@string/bank_name" />

                    <TextView
                        android:id="@+id/textView_easylink_realname"
                        style="@style/lotteryhall_text_gray"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/textView_easylink_realname_text"
                        android:background="@color/color_white"
                        android:gravity="center_vertical" />
                </RelativeLayout>

                <View
                    style="@style/style_gray_horizontal_line"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textView_easylink_phone_text"
                        style="@style/lotteryhall_text_gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp"
                        android:text="@string/easylink_veri_phone" />

                    <EditText
                        android:id="@+id/editText_easylink_phone"
                        style="@style/lotteryhall_text_gray"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/textView_easylink_phone_text"
                        android:background="@color/color_white"
                        android:digits="0123456789"
                        android:gravity="center_vertical"
                        android:hint="@string/easylink_veri_phone_text"
                        android:inputType="phone" />
                </RelativeLayout>

                <View
                    style="@style/style_gray_horizontal_line"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp" >

                    <TextView
                        android:id="@+id/textView_easylink_bankName_text"
                        style="@style/lotteryhall_text_gray"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:text="@string/bank_bankName" />

                    <RelativeLayout
                        android:id="@+id/laytout_easylink_bank"
                        android:layout_width="fill_parent"
                        android:layout_height="35dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_toRightOf="@+id/textView_easylink_bankName_text"
                        android:background="@drawable/selector_bg_feature_item"
                        android:clickable="true"
                        android:paddingLeft="5dp"
                        android:paddingRight="10dp" >

                        <TextView
                            android:id="@+id/textView_easylink_bankName"
                            style="@style/lotteryhall_text_gray"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:hint="@string/addcard_bank" />

                        <ImageView
                            android:id="@+id/textView_easylink_bank"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/icon_center_right_pull" />
                    </RelativeLayout>
                </RelativeLayout>

                <View
                    style="@style/style_gray_horizontal_line"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="@string/easylink_city"
                        android:textColor="@color/color_gray_indicator" />

                    <RelativeLayout
                        android:id="@+id/laytout_easylink_province"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/selector_bg_feature_item"
                        android:clickable="true"
                        android:paddingLeft="5dp"
                        android:paddingRight="10dp" >

                        <TextView
                            android:id="@+id/textView_easylink_provinceName"
                            style="@style/lotteryhall_text_gray"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:hint="@string/addcard_province" />

                        <ImageView
                            android:id="@+id/textView_easylink_province"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/icon_center_right_pull" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/laytout_easylink_city"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:background="@drawable/selector_bg_feature_item"
                        android:clickable="false"
                        android:paddingLeft="5dp"
                        android:paddingRight="10dp" >

                        <TextView
                            android:id="@+id/textView_easylink_cityName"
                            style="@style/lotteryhall_text_gray"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:hint="@string/addcard_city" />

                        <ImageView
                            android:id="@+id/textView_easylink_city"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/icon_center_right_pull" />
                    </RelativeLayout>
                </LinearLayout>

                <View
                    style="@style/style_gray_horizontal_line"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="@string/easylink_veri_type"
                        android:textColor="@color/color_gray_indicator" />

                    <LinearLayout
                        android:id="@+id/layout_easylink_jieji"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginLeft="30dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/selector_icon_recharge_item" />

                        <TextView
                            style="@style/lotteryhall_text_gray"
                            android:layout_marginLeft="5dp"
                            android:hint="借记卡" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_easylink_xinyong"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginLeft="30dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/selector_icon_recharge_item" />

                        <TextView
                            style="@style/lotteryhall_text_gray"
                            android:layout_marginLeft="5dp"
                            android:hint="信用卡" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    style="@style/style_gray_horizontal_line"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textView_easylink_cardnum_text"
                        style="@style/lotteryhall_text_gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp"
                        android:text="@string/usermanage_banknum" />

                    <EditText
                        android:id="@+id/editView_easylink_cardnum"
                        style="@style/lotteryhall_text_gray"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/textView_easylink_cardnum_text"
                        android:background="@color/color_white"
                        android:digits="1234567890"
                        android:gravity="center_vertical"
                        android:hint="@string/easylink_cardnum"
                        android:inputType="number"
                        android:singleLine="true" />

                    <ImageView
                        android:id="@+id/textView_easylink_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/icon_center_right_pull"
                        android:visibility="gone" />
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/textView_easylink_submit"
                style="@style/common_fillwidth_button"
                android:background="@drawable/selector_bg_common"
                android:text="@string/getbackpwd_submit" />

            <TextView
                android:id="@+id/textView_easylink_explain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/color_gray_indicator" />

            <TextView
                android:id="@+id/textView_recharge_explain1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/color_gray_indicator" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>