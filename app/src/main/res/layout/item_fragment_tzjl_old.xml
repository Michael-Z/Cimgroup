<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/layout_bg_color"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView_tz_item_time"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:textColor="@color/color_gray_secondary"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/textView_tz_item_state"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:textColor="@color/color_gray_secondary"
            android:gravity="center_vertical|right" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="0.5dp"
        android:orientation="horizontal"
        android:background="@color/layout_bg_color" >

        <RelativeLayout
            android:id="@+id/aa"
            android:layout_width="70dp"
            android:background="@android:color/white"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/imageView_tz_item_hemai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/icon_center_tz_in"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textView_tz_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_gray_secondary"
                android:layout_centerInParent="true" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0.5dp"
            android:background="@color/layout_bg_color"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView_tz_item_qi"
                android:layout_width="match_parent"
                android:paddingLeft="5dp"
                android:background="@color/color_white"
                android:layout_height="35dp"
                android:textColor="@color/color_gray_secondary"
                android:gravity="center_vertical" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@android:color/white"
                android:layout_marginTop="0.5dp" >

                <TextView
                    android:id="@+id/textView_tz_item_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_gray_secondary"
                    android:layout_marginLeft="5dp" />

                <TextView
                    android:id="@+id/textView_tz_item_iswin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/color_red" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/textView_tz_item_margin"
        android:layout_width="fill_parent"
        android:layout_height="5dp"
        android:background="@color/layout_bg_color" />

</LinearLayout> <!-- </RelativeLayout> -->
