<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@color/layout_bg_color"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/txtView_footballlottery_onclick_open"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="0.5dp"
        android:background="@drawable/selector_bg_footballlottery_click_open"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/football_open_click"
        android:textColor="@color/selector_bg_footballlottery_click_open"
        android:textSize="14sp" />
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="0.5dp"
        android:layout_marginRight="0.5dp"
        android:gravity="center"
        android:background="@color/border_color"
        android:text="未开售" />

</LinearLayout>