<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/layout_bg_color"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/color_white"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/id_pkg_image_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/lemi_red_pkg" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_marginLeft="0.5dp"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/color_white"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="10dp" >

                <TextView
                    android:id="@+id/id_redpkg_type"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="兑换红包"
                    android:textColor="@color/color_gray_secondary" />

                <TextView
                    android:id="@+id/id_item_exchange_time"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:textColor="@color/color_gray_indicator"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="0.5dp"
                android:layout_weight="1"
                android:background="@color/color_white"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="10dp" >

                <TextView
                    android:id="@+id/id_item_money"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="金额：5元"
                    android:textColor="@color/color_gray_secondary" />

                <TextView
                    android:id="@+id/id_item_invalid_time"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:text="失效期：2016-09-13"
                    android:textColor="@color/color_gray_secondary" />
            </LinearLayout>
        </LinearLayout>
        <ImageView 
            android:id="@+id/id_red_package_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            />
    </FrameLayout>

</LinearLayout>