<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:gravity="center" >

    <FrameLayout
        android:id="@+id/fl_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp" >

        <ImageView
            android:id="@+id/red_packet_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/lemi_convert_ticket" />

        <TextView
            android:id="@+id/product_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="16dp"
            android:textColor="@color/color_white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/lemi_convert_tele"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:textColor="@color/color_white" />

        <TextView
            android:id="@+id/lemi_convert_ticket_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:padding="3dp"
            android:textColor="@color/color_white" />

        <TextView
            android:id="@+id/lemi_convert_tick_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="3dp"
            android:padding="3dp"
            android:textColor="@color/color_white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/product_preferential"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="2dp"
            android:background="@drawable/shape_gray_round_transparent"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:textColor="@color/color_white"
            android:textSize="10sp" />
    </FrameLayout>

    <TextView
        android:id="@+id/red_packet_explain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fl_image"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="红包说明"
        android:visibility="gone" />

    <TextView
        android:id="@+id/product_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/red_packet_explain"
        android:paddingLeft="5dp" />

    <TextView
        android:id="@+id/lemi_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/red_packet_explain"
        android:layout_marginRight="5dp" />

    <TextView
        android:id="@+id/lemi_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/red_packet_explain"
        android:layout_marginLeft="5dp"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/gotu_buy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lemi_count"
        android:background="@color/color_gray_red_pkt"
        android:gravity="center_horizontal"
        android:paddingBottom="7dp"
        android:paddingTop="7dp"
        android:textColor="@color/color_white" />

</RelativeLayout>