<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/layout_bg_color"
    android:orientation="horizontal"
    android:padding="0.5dp" >

    <LinearLayout
        android:id="@+id/layoutView_basketballottery_left"
        android:layout_width="0dip"
        android:layout_height="70dp"
        android:layout_weight="1"
        android:background="@drawable/selector_bg_footballlottery_spf_item_center"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txtView_basketballlottry_left_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/selector_bg_footballlottery_sfc"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txtView_basketballottery_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="3dp"
            android:textColor="@color/selector_bg_footballlottery_sfc_sp"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutView_basketballottery_right"
        android:layout_width="0dip"
        android:layout_height="70dp"
        android:layout_marginLeft="0.5dp"
        android:layout_weight="1"
        android:background="@drawable/selector_bg_footballlottery_spf_item_center"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txtView_basketballlottry_right_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/selector_bg_footballlottery_sfc"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txtView_basketballottery_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="3dp"
            android:textColor="@color/selector_bg_footballlottery_sfc_sp"
            android:textSize="12sp" />
    </LinearLayout>

    
    <TextView android:id="@+id/textView_basketball_dx_stop"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="0.5dp"
        android:layout_marginRight="0.5dp"
        android:visibility="gone"
        android:gravity="center"
        android:background="@color/border_color"
        android:text="未开售" />
</LinearLayout>