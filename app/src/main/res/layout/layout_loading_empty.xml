<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_loading_empty"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_bg_color"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="45dp" >

    <ImageView
        android:id="@+id/imageView_load_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView_load_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textColor="@color/color_gray_indicator" />

    <TextView
        android:id="@+id/textView_load_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="@color/color_gray_indicator" />

    <TextView
        android:id="@+id/button_load"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textColor="@color/color_gray_secondary"
        android:textSize="16sp" />

</LinearLayout>