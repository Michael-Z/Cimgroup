<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/id_parent_layout"
    android:layout_height="match_parent" >

    <!-- 头部开始 -->

    <RelativeLayout
        android:id="@+id/id_header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/black" >

        <RelativeLayout
            android:id="@+id/id_back"
            android:layout_width="50dp"
            android:layout_height="match_parent" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/icon_back" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="翻牌赢乐米"
            android:textColor="@color/color_white"
            android:textSize="18sp" />

        <RelativeLayout
            android:id="@+id/id_share"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/e_ui_shape" />
        </RelativeLayout>
    </RelativeLayout>
    <!-- 头部结束 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/id_header"
        android:background="@drawable/e_ui_game_flop_bg"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <cn.com.cimgroup.view.FlopViewLayout
                android:id="@+id/id_flopview"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
            </cn.com.cimgroup.view.FlopViewLayout>

            <RelativeLayout
                android:id="@+id/id_sound_layout"
                android:layout_width="40dp"
                android:layout_height="40dp" >

                <ImageView
                    android:id="@+id/id_sound"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/e_ui_game_sound_o" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/id_jump_recharge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingLeft="18dp"
                android:paddingRight="35dp"
                android:background="@drawable/e_ui_game_flop_lemi_bg"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                >
                <TextView
                    android:id="@+id/id_lemi_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_white"
                    android:textSize="10sp" />
            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" >

                <RelativeLayout
                    android:id="@+id/id_big_layout"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_weight="1" >

                    <ImageView
                        android:id="@+id/id_big_bg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/e_ui_game_flop_n" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/e_ui_game_flop_big" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/id_small_layout"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_weight="1" >

                    <ImageView
                        android:id="@+id/id_small_bg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/e_ui_game_flop_n" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/e_ui_game_flop_small" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/id_odd_layout"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_weight="1" >

                    <ImageView
                        android:id="@+id/id_odd_bg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/e_ui_game_flop_n" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/e_ui_game_flop_odd" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/id_even_layout"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_weight="1" >

                    <ImageView
                        android:id="@+id/id_even_bg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/e_ui_game_flop_n" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/e_ui_game_flop_even" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/id_fifty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/selector_bg_game_fifty" />

            <ImageView
                android:id="@+id/id_two_hundred"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:src="@drawable/selector_bg_game_two_hundred" />

            <ImageView
                android:id="@+id/id_five_hundred"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:src="@drawable/selector_bg_game_five_hundred" />

            <TextView
                android:id="@+id/id_auto"
                android:layout_width="60dp"
                android:layout_height="26dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/shape_edit_gray_border_round"
                android:gravity="center"
                android:text="自定义"
                android:textColor="@color/color_white"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/id_lemi_edit"
                android:layout_width="60dp"
                android:layout_height="26dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/shape_edit_gray_border_round"
                android:digits="0123456789"
                android:gravity="center"
                android:inputType="number"
                android:textColor="@android:color/white"
                android:textColorHint="@color/color_white"
                android:textSize="12sp"
                android:text="10"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="参与投注："
                android:textColor="@color/color_white" />

            <TextView
                android:id="@+id/id_lemi_show"
                android:layout_width="80dp"
                android:layout_height="22dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:maxLength="7"
                android:text="10"
                android:textColor="@color/color_white"
                android:textSize="12sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/id_start_game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/selector_game_flop_start" />

        <TextView
            android:id="@+id/id_explain"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical|right"
            android:paddingBottom="5dp"
            android:text="规则  ?"
            android:textColor="@color/color_white"
            android:textSize="14sp" />
    </LinearLayout>
    <!-- 翻牌结果动画层开始 -->

    <RelativeLayout
        android:id="@+id/id_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/id_header"
        android:background="#55000000"
        android:visibility="gone" >
    </RelativeLayout>
    <!-- 翻牌结果动画层结束 -->
    <!-- 翻牌结果展示层开始 -->

    <RelativeLayout
        android:id="@+id/id_flop_result_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/id_header"
        android:background="#A0141414"
        android:visibility="gone" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/e_ui_game_flop_tran_bg" >

            <RelativeLayout
                android:id="@+id/id_flop_layout_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="21dp" >

                <ImageView
                    android:id="@+id/id_rotate_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/e_ui_game_draw_result_flop_bg" />
                <!-- 结果显示中间牌值跟花色-开始 -->

                <RelativeLayout
                    android:id="@+id/id_flop_resule_layout"
                    android:layout_width="95dp"
                    android:layout_height="150dp"
                    android:layout_centerInParent="true" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/e_ui_game_flop_show" />

                    <TextView
                        android:id="@+id/id_toast_left_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="3dp"
                        android:text="A"
                        android:textColor="@color/color_gray_secondary"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/id_toast_rignt_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="8dp"
                        android:layout_marginRight="8dp"
                        android:rotation="180"
                        android:text="A"
                        android:textColor="@color/color_gray_secondary"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/id_toast_left_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/id_toast_left_text"
                        android:layout_marginLeft="-3dp"
                        android:layout_marginTop="-7dp"
                        android:scaleX="0.4"
                        android:scaleY="0.6"
                        android:src="@drawable/e_ui_game_flop_spade" />

                    <ImageView
                        android:id="@+id/id_toast_rignt_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@id/id_toast_rignt_text"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="-6dp"
                        android:layout_marginRight="-1dp"
                        android:rotation="180"
                        android:scaleX="0.4"
                        android:scaleY="0.6"
                        android:src="@drawable/e_ui_game_flop_spade" />

                    <ImageView
                        android:id="@+id/id_toast_middle_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/e_ui_game_flop_spade" />
                </RelativeLayout>
                <!-- 结果显示中间牌值跟花色-结束 -->
            </RelativeLayout>
            <!-- 结果显示信息-开始 -->

            <LinearLayout
                android:id="@+id/id_middle_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/id_flop_layout_top"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="-30dp"
                android:background="@drawable/e_ui_game_flop_toast_bg"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/id_draw_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="3dp"
                    android:src="@drawable/e_ui_game_draw_icon_true" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingLeft="25dp" >

                    <TextView
                        android:id="@+id/id_draw_toast_title"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="恭喜！！ 连赢两次 ~"
                        android:textColor="@color/color_white"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/id_draw_toast_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="获取：+1000乐米"
                        android:textColor="@color/color_white"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
            <!-- 结果显示信息-结束 -->
            <!-- 结果显示按钮-开始 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/id_middle_layout"
                android:layout_marginTop="30dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/id_toast_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/selector_game_flop_share" />

                <ImageView
                    android:id="@+id/id_toast_ok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/selector_game_flop_ok" />
            </LinearLayout>
            <!-- 结果显示按钮-结束 -->
        </RelativeLayout>
    </RelativeLayout>
    <!-- 翻牌结果展示层结束 -->

    <RelativeLayout
        android:id="@+id/id_guide_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B0000000"
        android:visibility="gone" >
    </RelativeLayout>

</RelativeLayout>