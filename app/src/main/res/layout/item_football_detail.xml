<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@color/color_gray_line"
    android:orientation="horizontal"
    android:paddingBottom="0.5dp" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/color_white"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView_football_item_time"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center_horizontal"
            android:textColor="@color/color_gray_secondary" />

        <TextView
            android:id="@+id/textView_football_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/color_gray_secondary" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="0.5dp"
        android:layout_weight="2"
        android:background="@color/color_white"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView_football_item_home"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/color_gray_secondary" />

        <TextView
            android:id="@+id/textView_football_item_score"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="@color/color_gray_secondary" />

        <TextView
            android:id="@+id/textView_football_item_guest"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/color_gray_secondary" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView_football_item_tz"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="0.5dp"
        android:layout_weight="2"
        android:background="@color/color_white"
        android:gravity="center"
        android:textColor="@color/color_gray_secondary" />

    <TextView
        android:id="@+id/textView_football_item_result"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="0.5dp"
        android:layout_weight="1"
        android:background="@color/color_white"
        android:gravity="center"
        android:textColor="@color/color_gray_secondary" />

    <TextView
        android:id="@+id/textView_football_item_dan"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="0.5dp"
        android:layout_weight="1"
        android:background="@color/color_white"
        android:gravity="center"
        android:textColor="@color/color_gray_secondary" />

</LinearLayout>