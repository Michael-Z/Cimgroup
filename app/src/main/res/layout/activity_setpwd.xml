<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hall_background"
    android:orientation="vertical" >

    <include layout="@layout/include_title0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_shape_white_no_border"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="1dp" >

            <TextView
                android:id="@+id/textView_setpwd_old"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="35dp"
                android:text="@string/setpwd_old"
                android:textColor="@color/color_gray_indicator" />

            <View
                android:id="@+id/setpwd_line0"
                android:layout_height="match_parent"
                android:layout_width="1dp"
                android:background="@color/layout_bg_color"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/textView_setpwd_old" />

            <cn.com.cimgroup.view.DisableExpressionEditText
                android:id="@+id/id_editText_setpwd_oldpwd"
                style="@style/lotteryhall_text_gray"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/setpwd_line0"
                android:background="@color/color_white"
                android:hint="@string/setpwd_write_old"
                android:inputType="textPassword"
                android:singleLine="true" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/layout_bg_color"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp" >

            <TextView
                android:id="@+id/textView_setpwd_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="35dp"
                android:text="@string/setpwd_new"
                android:textColor="@color/color_gray_indicator" />

            <View
                android:id="@+id/setpwd_line1"
                android:layout_height="match_parent"
                android:layout_width="1dp"
                android:background="@color/layout_bg_color"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/textView_setpwd_new" />

            <cn.com.cimgroup.view.DisableExpressionEditText
                android:id="@+id/id_editText_setpwd_newpwd"
                style="@style/lotteryhall_text_gray"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/setpwd_line1"
                android:background="@color/color_white"
                android:hint="@string/setpwd_write_new"
                android:inputType="textPassword"
                android:maxLength="16"
                android:singleLine="true" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/layout_bg_color"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="1dp" >

            <TextView
                android:id="@+id/textView_setpwd_new1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="@string/setpwd_new1"
                android:textColor="@color/color_gray_indicator" />

            <View
                android:id="@+id/setpwd_line2"
                android:layout_height="match_parent"
                android:layout_width="1dp"
                android:background="@color/layout_bg_color"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/textView_setpwd_new1" />

            <cn.com.cimgroup.view.DisableExpressionEditText
                android:id="@+id/id_editText_setpwd_new1pwd"
                style="@style/lotteryhall_text_gray"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/setpwd_line2"
                android:background="@color/color_white"
                android:hint="@string/setpwd_write_new1"
                android:inputType="textPassword"
                android:maxLength="16"
                android:singleLine="true" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textView_setpwd_submit"
        style="@style/common_fillwidth_button"
        android:background="@drawable/selector_bg_common"
        android:textSize="16sp"
        android:text="@string/getbackpwd_submit" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView_setpwd_explain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_gray_indicator" />
    </LinearLayout>

</LinearLayout>