<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cvpager="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_bg_color" >

    <include
        android:id="@+id/other_top"
        layout="@layout/include_title0" />

    <android.support.v4.view.ViewPager
        android:id="@+id/v4View_onewin_football_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layout_onewin_football_bottom"
        android:layout_below="@id/other_top" />

    <LinearLayout android:id="@+id/layout_onewin_football_bottom"
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:background="#DEDFDE"
        android:orientation="horizontal" >

        <include layout="@layout/include_lotterybid_bottom" />
    </LinearLayout>

</RelativeLayout>