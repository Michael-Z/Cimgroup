<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/selector_bg_center_textview"
    android:layout_height="wrap_content">

    <RelativeLayout android:id="@+id/layout_title"
        android:layout_width="match_parent"
    	android:layout_height="wrap_content">
    	
	    <TextView
	        android:layout_width="wrap_content"
	        android:id="@+id/id_title"
	        android:gravity="center"
	        android:textColor="@color/color_black"
	        android:layout_centerInParent="true"
	        android:text="提示"
	        android:textSize="18sp"
	        android:layout_height="wrap_content" />
	    
	    <ImageView android:id="@+id/imageView_confirm_close"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:src="@drawable/btn_confirm_close"/>
    
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/dia_des"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textColor="@color/color_gray_secondary"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:text="确认兑换?"
        android:textColor="@color/color_gray_secondary"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:id="@+id/sure_confirm"
        android:layout_below="@id/layout_title"
        android:gravity="center"
        android:layout_height="wrap_content" 
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_below="@id/sure_confirm"
        android:gravity="center"
        android:layout_marginBottom="15dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="120dp"
            android:textColor="@color/color_gray_secondary"
            android:id="@+id/cancel"
            android:text="取消"
            android:padding="10dp"
            android:gravity="center"
            android:background="@drawable/selector_bg_center_textview"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content" 
            />

        <TextView
            android:layout_width="120dp"
            android:text="确定"
            android:id="@+id/comfirm"
            android:layout_marginLeft="10dp"
            android:textColor="@color/color_white"
            android:padding="10dp"
            android:gravity="center"
            android:background="@drawable/selector_bg_red_center_textview"
            android:layout_height="wrap_content" 
            />

    </LinearLayout>

</RelativeLayout>
