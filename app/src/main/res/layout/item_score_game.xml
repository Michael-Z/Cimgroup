<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <View
        android:id="@+id/id_score_topline"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/color_gray_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/color_white"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <View
                style="@style/style_gray_vertical_line"
                />

            <TextView
                android:id="@+id/id_zhu_event_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/color_gray_secondary"
                android:gravity="center_vertical|right"
                android:paddingRight="20dp"
                android:textSize="12sp" />

            <View
                android:id="@+id/id_zhu_line"
                style="@style/style_gray_vertical_line" />

            <ImageView
                android:id="@+id/id_zhu_event_image"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp" />
        </LinearLayout>

        <View style="@style/style_gray_vertical_line" />

        <TextView
            android:id="@+id/id_event_time"
            android:layout_width="60dp"
            android:textColor="@color/color_gray_secondary"
            android:layout_height="match_parent"
            android:gravity="center" />

        <View style="@style/style_gray_vertical_line" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/id_ke_event_image"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp" />

            <View
                android:id="@+id/id_ke_line"
                style="@style/style_gray_vertical_line"
                android:layout_toRightOf="@id/id_ke_event_image" />

            <View
                android:id="@+id/id_right_line_ke"
                style="@style/style_gray_vertical_line"
                android:layout_alignParentRight="true" />

            <TextView
                android:id="@+id/id_ke_event_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@id/id_right_line_ke"
                android:layout_toRightOf="@id/id_ke_line"
                android:gravity="center_vertical|left"
                android:textColor="@color/color_gray_secondary"
                android:paddingLeft="20dp"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>

    <View
        style="@style/style_gray_horizontal_line"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" />

</LinearLayout>