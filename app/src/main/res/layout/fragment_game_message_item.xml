<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_bg_white_round_2dp"
    android:paddingTop="15dp" >

    <LinearLayout
        android:id="@+id/id_top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/id_username"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:minHeight="20dp"
            android:textColor="@color/color_gray_secondary"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/id_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/color_gray_indicator"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/id_context"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_top_layout"
        android:layout_marginTop="2dp"
        android:gravity="center_vertical|left"
        android:minHeight="20dp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:textColor="@color/color_gray_secondary"
        android:textSize="13sp" />

    <View
        android:id="@+id/id_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/id_context"
        android:layout_marginTop="15dp"
        android:background="@color/layout_bg_color"
        android:layerType="software" />

    <TextView
        android:id="@+id/id_empty_context"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textColor="@color/color_gray_secondary"
        android:textSize="16sp"
        android:visibility="gone" />

</RelativeLayout>