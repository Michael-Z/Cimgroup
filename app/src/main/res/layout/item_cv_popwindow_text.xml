<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/btnView_football_itemselect"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/selector_border_red_gray"
        android:gravity="center"
        android:textColor="@color/color_gray_secondary"
        android:padding="5dip"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/id_choose_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/icon_hall_linear_select" />

</RelativeLayout>