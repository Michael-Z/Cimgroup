<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 被选择后显示红色边框，未选择时显示灰色边框 -->
    <item android:state_selected="true"><shape>
            <solid android:color="@color/game_color_green" />

            <corners android:radius="3dp" />

            <stroke android:width="0.6dp" android:color="@color/transparent" />
        </shape></item>
    <item android:state_selected="false"><shape>
            <solid android:color="@color/color_white" />

            <stroke android:width="0.6dp" android:color="@color/color_deep_gray_line" />

            <corners android:radius="3dp" />
        </shape></item>

</selector>