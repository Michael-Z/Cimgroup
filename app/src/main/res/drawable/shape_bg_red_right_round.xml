<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false"><shape>
            <solid android:color="@color/color_red" />

            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="3dp" android:topLeftRadius="0dp" android:topRightRadius="3dp" />
        </shape></item>
    <item android:state_pressed="true"><shape>
            <solid android:color="@color/layout_bg_color" />

            <stroke android:width="0.5dp" android:color="@color/layout_bg_color" />

            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="3dp" android:topLeftRadius="0dp" android:topRightRadius="3dp" />
        </shape></item>

</selector>